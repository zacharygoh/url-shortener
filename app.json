{
  "name": "CoinGecko URL Shortener",
  "description": "A production-ready URL shortener with swap price resolver, built with Rails 7, Hotwire, and Tailwind CSS",
  "keywords": [
    "url-shortener",
    "rails",
    "postgresql",
    "redis",
    "hotwire",
    "tailwindcss"
  ],
  "repository": "https://github.com/your-username/coingecko-url-shortener",
  "logo": "https://www.coingecko.com/favicon.png",
  "success_url": "/",
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate db:seed"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    },
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "RAILS_ENV": {
      "description": "Rails environment",
      "value": "production",
      "required": true
    },
    "RACK_ENV": {
      "description": "Rack environment",
      "value": "production",
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "description": "Log to stdout for Heroku",
      "value": "enabled",
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "description": "Serve static assets",
      "value": "true",
      "required": true
    },
    "RAILS_MASTER_KEY": {
      "description": "Rails master key for encrypted credentials",
      "generator": "secret",
      "required": true
    },
    "WEB_CONCURRENCY": {
      "description": "Number of Puma workers",
      "value": "2"
    },
    "RAILS_MAX_THREADS": {
      "description": "Number of threads per worker",
      "value": "5"
    }
  }
}
