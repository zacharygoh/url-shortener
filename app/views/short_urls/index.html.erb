<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <%# Header %>
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold text-gray-900 mb-3">
        üîó CoinGecko URL Shortener
      </h1>
      <p class="text-xl text-gray-600">
        Create short, shareable links in seconds
      </p>
    </div>

    <%# URL Shortener Form %>
    <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
      <div id="short-url-form" data-controller="url-shortener">
        <div class="mb-6">
          <label for="target_url" class="block text-sm font-medium text-gray-700 mb-2">
            Enter your long URL
          </label>
          <div class="flex gap-3">
            <input
              type="url"
              id="target_url"
              data-url-shortener-target="input"
              class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
              placeholder="https://example.com/very/long/url/path"
              required
            />
            <button
              data-action="click->url-shortener#shorten"
              data-url-shortener-target="submitBtn"
              class="px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors"
            >
              Shorten
            </button>
          </div>
        </div>

        <%# Result Display %>
        <div
          data-url-shortener-target="result"
          class="hidden mt-6 p-6 bg-green-50 border border-green-200 rounded-lg"
        >
          <h3 class="text-lg font-semibold text-gray-900 mb-3">‚úì Success!</h3>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Short URL:</label>
              <div class="flex gap-2">
                <input
                  type="text"
                  data-url-shortener-target="shortUrl"
                  readonly
                  class="flex-1 px-4 py-2 bg-white border border-gray-300 rounded-lg font-mono text-sm"
                />
                <button
                  data-action="click->url-shortener#copy"
                  class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700"
                >
                  Copy
                </button>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Target URL:</label>
              <a
                data-url-shortener-target="targetUrl"
                href="#"
                target="_blank"
                rel="noopener noreferrer"
                class="block px-4 py-2 bg-white border border-gray-300 rounded-lg text-sm text-indigo-600 hover:text-indigo-800 break-all"
              >
              </a>
            </div>
            <div data-url-shortener-target="titleDisplay" class="hidden">
              <label class="block text-sm font-medium text-gray-700 mb-1">Page Title:</label>
              <p data-url-shortener-target="title" class="text-gray-900"></p>
            </div>
          </div>
        </div>

        <%# Error Display %>
        <div
          data-url-shortener-target="error"
          class="hidden mt-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700"
        >
        </div>
      </div>
    </div>

    <%# Recent URLs %>
    <% if @recent_urls.any? %>
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Recent Short URLs</h2>
        <div class="space-y-4">
          <% @recent_urls.each do |short_url| %>
            <% short_full_url = "#{request.base_url}/#{short_url.short_code}" %>
            <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1 flex-wrap">
                  <a
                    href="<%= short_full_url %>"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="font-mono text-indigo-600 font-semibold hover:text-indigo-800 hover:underline break-all"
                  >
                    <%= short_full_url %>
                  </a>
                  <button
                    type="button"
                    data-controller="clipboard"
                    data-clipboard-text-value="<%= short_full_url %>"
                    data-action="click->clipboard#copy"
                    class="px-3 py-1 text-sm bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1"
                  >
                    Copy
                  </button>
                </div>
                <p class="text-sm text-gray-600 truncate">
                  ‚Üí <%= short_url.target_url %>
                </p>
                <% if short_url.title.present? %>
                  <p class="text-xs text-gray-500 mt-1">
                    <%= short_url.title %>
                  </p>
                <% end %>
              </div>
              <div class="ml-4 flex items-center gap-2 text-sm text-gray-500">
                <span>üëÅ <%= short_url.click_count %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Footer %>
    <div class="text-center mt-12 text-gray-600">
      <p class="text-sm">
        Built with Rails 7, Hotwire, and Tailwind CSS for CoinGecko
      </p>
    </div>
  </div>
</div>
